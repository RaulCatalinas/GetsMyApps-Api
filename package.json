    "drizzle-zod": "0.8.3",
    "express": "5.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@types/bun": "1.3.8",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "drizzle-kit": "0.31.8",
    "esbuild": "0.27.2",
    "eslint-config-love": "149.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-drizzle": "0.2.3",
    "eslint-plugin-prettier": "5.5.5",
    "husky": "9.1.7",
